<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:id="@+id/loginLayout"
    tools:ignore="InvalidId">

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="60dp"
        android:layout_height="42dp"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:text="namdvd00453@fpt.edu.vn"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:layout_height="42dp"
        android:hint="Mật khẩu"
        android:text="123123aa"/>

    <CheckBox
        android:id="@+id/cbSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="Ghi nhớ đăng nhập" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="60dp"
        android:text="Đăng nhập"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="handleLogin"/>

    <Button
        android:id="@+id/btRegister"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="90dp"
        android:text="Tạo tài khoản"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="handleRegister"/>

    <Button

        android:id="@+id/btForgot"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="Quên mật khẩu?"
        android:textColor="@color/colorLoginBackground"
        android:onClick="handleForgot"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginView"
        android:orientation="vertical" />

</LinearLayout>